<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/banner_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slider_background"
    android:elevation="3dp"
    android:padding="0dp">

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/imageSlider_news"
        android:layout_width="0sp"
        android:layout_height="250sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="5dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="0dp"
        app:sliderIndicatorSelectedColor="@android:color/white"
        app:sliderIndicatorUnselectedColor="@android:color/darker_gray"
        app:sliderScrollTimeInSec="1"
        app:sliderStartAutoCycle="true">

        <ImageView
            android:id="@+id/iv_auto_image_slider_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic[0]" />

        <TextView
            android:id="@+id/tv_auto_image_slider_news"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:background="#20000000"
            android:lines="2"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText" />
    </com.smarteist.autoimageslider.SliderView>

</androidx.constraintlayout.widget.ConstraintLayout>